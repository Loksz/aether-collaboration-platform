generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://aether:aether_dev_password@127.0.0.1:5432/aether_dev?schema=public&connect_timeout=10"
}

// Event Store
model Event {
  id           String   @id @default(uuid()) @db.Uuid
  eventType    String   @map("event_type") @db.VarChar(100)
  payload      Json
  userId       String   @map("user_id") @db.Uuid
  timestamp    BigInt
  version      Int
  vectorClock  Json     @map("vector_clock")
  createdAt    DateTime @default(now()) @map("created_at")

  @@index([timestamp])
  @@index([eventType])
  @@index([userId])
  @@map("events")
}

// User
model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String
  name      String
  avatar    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  workspaces WorkspaceMember[]
  createdBoards Board[]

  @@map("users")
}

// Workspace
model Workspace {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  description String?
  ownerId     String   @map("owner_id") @db.Uuid
  icon        String?
  color       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  members WorkspaceMember[]
  boards  Board[]
  labels  Label[]

  @@map("workspaces")
}

// Workspace Member
model WorkspaceMember {
  id          String   @id @default(uuid()) @db.Uuid
  workspaceId String   @map("workspace_id") @db.Uuid
  userId      String   @map("user_id") @db.Uuid
  role        String   @db.VarChar(20)
  joinedAt    DateTime @default(now()) @map("joined_at")

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@map("workspace_members")
}

// Board
model Board {
  id          String   @id @default(uuid()) @db.Uuid
  workspaceId String   @map("workspace_id") @db.Uuid
  name        String
  description String?
  position    Int
  archived    Boolean  @default(false)
  createdBy   String   @map("created_by") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  creator   User      @relation(fields: [createdBy], references: [id])
  lists     List[]

  @@map("boards")
}

// List
model List {
  id        String   @id @default(uuid()) @db.Uuid
  boardId   String   @map("board_id") @db.Uuid
  name      String
  position  Int
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  board Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards Card[]

  @@map("lists")
}

// Card
model Card {
  id          String    @id @default(uuid()) @db.Uuid
  listId      String    @map("list_id") @db.Uuid
  title       String
  description String?
  position    Int
  dueDate     DateTime? @map("due_date")
  priority    String?   @db.VarChar(20)
  createdBy   String    @map("created_by") @db.Uuid
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  list List @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@map("cards")
}

// Label
model Label {
  id          String   @id @default(uuid()) @db.Uuid
  workspaceId String   @map("workspace_id") @db.Uuid
  name        String
  color       String
  createdAt   DateTime @default(now()) @map("created_at")

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@map("labels")
}